{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "lib": ["DOM", "ESNext"],
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node", "jest"],
    "typeRoots": ["./types", "./node_modules/@types"],
    "allowJs": true,
    "outDir": "dist"
  },
  "include": [
    "tests/**/*.ts",
    "utils/**/*.ts",
    "global-setup.ts",
    "global-teardown.ts",
    "playwright.config.ts",
    "types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
